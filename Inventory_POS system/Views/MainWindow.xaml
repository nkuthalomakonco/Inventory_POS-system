<Window x:Class="Inventory_POS_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory_POS_system.Views"
        mc:Ignorable="d"
        Title="Inventory POS System"
        Height="800"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Merge styles -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Outer border provides rounded corners -->
    <Border CornerRadius="12"
            Background="#1E1E1E"
            BorderBrush="#333"
            BorderThickness="1"
            Padding="2"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <DockPanel>

            <!-- Custom title bar -->
            <DockPanel DockPanel.Dock="Top" Height="40" Background="#252525">

                <!-- App title -->
                <TextBlock Text="Inventory POS System"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold" />

                <!-- Spacer -->
                <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                        <!-- Minimize button -->
                        <Button Content="–"
                                Width="40"
                                Height="30"
                                Margin="0,5,5,5"
                                Click="MinimizeButton_Click"
                                Style="{StaticResource WindowButtonStyle}" />

                        <!-- Close button -->
                        <Button Content="X"
                                Width="40"
                                Height="30"
                                Margin="0,5,5,5"
                                Click="CloseButton_Click"
                                Style="{StaticResource WindowButtonStyle}" />
                    </StackPanel>
                </DockPanel>

            </DockPanel>

            <!-- Navigation buttons -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                <Button Content="Inventory"
                        Width="100"
                        Margin="5"
                        Click="InventoryButton_Click"
                        
                        Style="{StaticResource DarkButtonStyle}" />
                <Button Content="POS"
                        Width="100"
                        Margin="5"
                        Click="POSButton_Click"
                        Style="{StaticResource DarkButtonStyle}" />
            </StackPanel>

            <!-- Frame to host Pages -->
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Background="#1C1C1C"/>
        </DockPanel>

    </Border>
</Window>
