<Window x:Class="Inventory_POS_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory_POS_system.Views"
        mc:Ignorable="d"
        Title="Inventory POS System" Height="600" Width="1000" WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Navigation buttons at top -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
            <Button Content="Inventory" Width="100" Margin="5" Click="InventoryButton_Click"/>
            <Button Content="POS" Width="100" Margin="5" Click="POSButton_Click"/>
        </StackPanel>

        <!-- Frame to host Pages -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
