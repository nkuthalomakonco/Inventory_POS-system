<Page x:Class="Inventory_POS_system.Views.POSView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Inventory_POS_system.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="POSView">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT: PRODUCT LIST -->
        <GroupBox Header="Products" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding POSVM.Products}"
                      SelectedItem="{Binding POSVM.SelectedProduct}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="100"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="1"
                    Content="Add to Cart"
                    Command="{Binding POSVM.AddToCartCommand}"
                    Height="35"
                    Margin="5"
                    HorizontalAlignment="Stretch"/>
            </Grid>
        </GroupBox>

        <!-- RIGHT: CART -->
        <GroupBox Header="Cart" Grid.Column="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding POSVM.Cart}"
                      SelectedItem="{Binding POSVM.SelectedCartItem}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product" Binding="{Binding Product.Name}" Width="*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Product.Price, StringFormat=C}" Width="100"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding LineTotal, StringFormat=C}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- CART ACTIONS -->
                <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="5">
                    <Button Content="Remove"
                        Command="{Binding POSVM.RemoveFromCartCommand}"
                        Width="100"
                        Margin="5"/>
                </StackPanel>

                <!-- CHECKOUT -->
                <Border Grid.Row="2"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Padding="10"
                    Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="TOTAL:"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                        <TextBlock Grid.Column="1"
                               Text="{Binding POSVM.Total, StringFormat=C}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="DarkGreen"
                               Margin="20,0,0,0"/>

                        <Button Grid.ColumnSpan="2"
                            Content="CHECKOUT"
                            Command="{Binding POSVM.CheckoutCommand}"
                            Height="45"
                            Margin="0,40,0,0"
                            FontWeight="Bold"/>
                    </Grid>
                </Border>
            </Grid>
        </GroupBox>
    </Grid>

</Page>
