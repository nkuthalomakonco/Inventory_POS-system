<Page x:Class="Inventory_POS_system.Views.POSView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Inventory_POS_system.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="POSView">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT: PRODUCT LIST -->
        <GroupBox Header="Products" Margin="5" Style="{StaticResource DarkGroupBoxStyle}" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding Products}"
                          SelectedItem="{Binding SelectedProduct}"
                          Style="{StaticResource CustomDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource CustomDataGridColumnHeaderStyle}"
                          RowStyle="{StaticResource CustomDataGridRowStyle}"
                          CellStyle="{StaticResource DarkDataGridCellStyle}"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C,ConverterCulture=en-ZA}" Width="100"/>
                        <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <StackPanel Grid.Row="1" Margin="5">
                    <TextBox Text="{Binding ScannedBarcode, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource BarcodeTextBoxStyle}" KeyDown="BarcodeTextBox_KeyDown"/>

                    <Button Content="Add to Cart"
                    Command="{Binding AddToCartCommand}"
                    Style="{StaticResource AddToCartButtonStyle}"/>
                </StackPanel>

            </Grid>
        </GroupBox>

        <!-- RIGHT: CART -->
        <GroupBox Header="Cart" Grid.Column="1" Margin="5" Style="{StaticResource DarkGroupBoxStyle}" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding Cart}"
                      SelectedItem="{Binding SelectedCartItem}"
                      AutoGenerateColumns="False"
                      Style="{StaticResource CustomDataGridStyle}"
                      IsReadOnly="True"
                      Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product" Binding="{Binding Product.Name}" Width="*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Product.Price, StringFormat=C , ConverterCulture=en-ZA}" Width="100"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding LineTotal, StringFormat=C, ConverterCulture=en-ZA}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- CART ACTIONS -->
                <StackPanel Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Margin="8">

                    <!-- TOTAL -->
                    <Border Background="#222"
            CornerRadius="6"
            Padding="10,6"
            Margin="6">
                        <TextBlock Text="{Binding TotalWithTax,
                          StringFormat=Total + Tax: {0:C},
                          ConverterCulture=en-ZA}"
                   Foreground="#7CFF7C"
                   FontWeight="Bold"
                   FontSize="14"/>
                    </Border>

                    <!-- INCREASE -->
                    <Button Content="＋"
            Command="{Binding IncreaseQuantityCommand}"
            Style="{StaticResource CartActionButtonStyle}"/>

                    <!-- DECREASE -->
                    <Button Content="−"
            Command="{Binding DecreaseQuantityCommand}"
            Style="{StaticResource CartActionButtonStyle}"/>

                    <!-- REMOVE -->
                    <Button Content="Remove"
            Command="{Binding RemoveFromCartCommand}"
            Width="110"
            Style="{StaticResource DangerButtonStyle}"/>

                </StackPanel>


                <!-- CHECKOUT -->
                <Border Grid.Row="2"
        BorderThickness="1"
        BorderBrush="Gray"
        Padding="10"
        Margin="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Total display -->
                            <RowDefinition Height="Auto"/>
                            <!-- Checkout button -->
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- TOTAL -->
                        <TextBlock Text="TOTAL:"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="DarkGreen"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="0"/>
                        <TextBlock Text="{Binding Total, StringFormat=C,ConverterCulture=en-ZA}"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="DarkGreen"
                   Margin="20,0,0,0"
                   Grid.Row="0"
                   Grid.Column="1"/>

                        <!-- CHECKOUT BUTTON -->
                        <Button Content="CHECKOUT"
                Command="{Binding CheckoutCommand}"
                Height="45"
                Margin="0,10,0,0"
                FontWeight="Bold"
                Grid.Row="1"
                Grid.ColumnSpan="2"/>
                    </Grid>
                </Border>
            </Grid>
        </GroupBox>
    </Grid>

</Page>
